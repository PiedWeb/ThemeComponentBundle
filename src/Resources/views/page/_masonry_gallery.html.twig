{% if page.images is defined and page.images is not empty %}

    {% set images = page.images.slice(galleryFilterFrom|default('0'), galleryFilterTo|default('1000')) %}

    {% set id = 'gallery' %}
    {% set container = true %}
        {% block body %}
            <div class="masonry mimg">
                {% for image in images %}
                    {% if loop.index <= 3 or gallery_not_lazy is defined %}
                        {% include '@PiedWebCMS/page/_masonry_gallery_part.html.twig' with {'image': image} only %}
                    {% else %}
                        {% include '@PiedWebCMS/page/_masonry_gallery_part_lazy.html.twig' with {'image': image} only %}
                    {% endif %}
                {% endfor %}
            </div>
        {% endblock %}
{% endif %}
