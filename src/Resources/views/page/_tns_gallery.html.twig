{% if page.images is defined and page.images is not empty %}
    <section id="gallery">
        <div class="container-fluid">
            <div class="row">
                <div class="tns mimg">
                    {% for image in page.images %}
                        {% set img = image.relativeDir ~ '/' ~ image.media %}
                        <div>
                            <a href="{{ img|imagine_filter('default') }}">
                               <span data-img="{{ img|imagine_filter('height_300') }}">{{ image.name }}</span>
                            </a>
                        </div>
                    {% endfor %}
                </div>
            </div>
        </div>
    </section>
{% endif %}
